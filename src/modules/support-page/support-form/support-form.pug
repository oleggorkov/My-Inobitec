                    input(type="tel" name="issue-phone" id="issue-phone" data-pattern="\\+[0-9]{11}" data-msg="Поле заполнено не верно" minlength="12" placeholder="+___________" inputmode="numeric")

                .input.support-form__code.js-code-input
